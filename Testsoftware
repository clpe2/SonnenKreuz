#include <Servo.h>

Servo servoHorizontal; // Pin 9
Servo servoVertikal;   // Pin 10

void setup() {
  Serial.begin(9600);
  
  // Servos an die Pins hängen
  servoHorizontal.attach(9);
  servoVertikal.attach(10);

  // Sicherstellen, dass sie beim Start auf 0 stehen
  servoHorizontal.write(0);
  servoVertikal.write(0);
  
  Serial.println("System gestartet. Servos auf 0 gesetzt.");
}

void loop() {
  // ---------------------------------------------------------
  // SCHRITT 1: 10 Sekunden bei 0 Grad warten
  // ---------------------------------------------------------
  Serial.println("Warte 10 Sekunden bei 0 Grad...");
  delay(10000); // 10.000 Millisekunden = 10 Sekunden

  // ---------------------------------------------------------
  // SCHRITT 2: Langsam von 0 auf 90 Grad fahren
  // (Jede Sekunde +5 Grad)
  // ---------------------------------------------------------
  Serial.println("Fahre langsam hoch zu 90 Grad...");
  
  for (int pos = 0; pos <= 90; pos += 5) {
    servoHorizontal.write(pos);
    servoVertikal.write(pos);
    
    Serial.print("Position: ");
    Serial.println(pos);
    
    delay(1000); // 1 Sekunde warten pro 5-Grad-Schritt
  }

  // ---------------------------------------------------------
  // SCHRITT 3: 10 Sekunden bei 90 Grad warten
  // ---------------------------------------------------------
  Serial.println("Ziel erreicht. Warte 10 Sekunden bei 90 Grad...");
  delay(10000); 

  // ---------------------------------------------------------
  // SCHRITT 4: Langsam von 90 zurück auf 0 Grad fahren
  // (Jede Sekunde -5 Grad)
  // ---------------------------------------------------------
  Serial.println("Fahre langsam zurueck zu 0 Grad...");
  
  for (int pos = 90; pos >= 0; pos -= 5) {
    servoHorizontal.write(pos);
    servoVertikal.write(pos);
    
    Serial.print("Position: ");
    Serial.println(pos);
    
    delay(1000); // 1 Sekunde warten pro 5-Grad-Schritt
  }
  
  Serial.println("Zyklus beendet. Beginne von vorne...");
}
